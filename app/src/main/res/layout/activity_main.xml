<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/drawer_layout"
        android:fitsSystemWindows="true">

    <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <include
                layout="@layout/toolbar_layout" />

        <FrameLayout
                android:id="@+id/f1content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teplota Vody:" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                android:layout_marginTop="157dp" android:layout_marginStart="0dp"/>

                <android.support.design.widget.TextInputEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Doba Louhování:" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                  android:layout_marginStart="0dp" android:layout_marginTop="197dp"/>

                <android.support.design.widget.TextInputEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Poznámky:" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                  android:layout_marginStart="0dp" android:layout_marginTop="237dp"/>

        <android.support.design.widget.TextInputEditText
                android:layout_width="305dp"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/czech_name" android:layout_marginStart="75dp"
                android:layout_marginBottom="-218dp"/>

        <TextView
                android:id="@+id/name_of_tea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jméno čaje:" android:layout_alignParentTop="true"
                android:layout_marginTop="77dp"/>

                <android.support.design.widget.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/czech_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Český název čaje:" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="117dp" android:layout_marginStart="0dp"/>

        <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/czech_name" android:layout_marginStart="155dp"
                android:layout_marginBottom="21dp"/>

        <TextView
                android:id="@+id/some"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sakrae:" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="252dp" android:layout_marginStart="0dp"/>
    </RelativeLayout>

         <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/navigationView"
            android:layout_gravity="start"
            app:headerLayout="@layout/header_layout"
            app:menu="@menu/drawer_view">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>